{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "bookingid",
    "roomid",
    "firstname",
    "lastname",
    "depositpaid",
    "bookingdates",
    "email",
    "phone"
  ],
  "properties": {
    "bookingid": {
      "type": "integer"
    },
    "roomid": {
      "type": "integer"
    },
    "firstname": {
      "type": "string"
    },
    "lastname": {
      "type": "string"
    },
    "depositpaid": {
      "type": "boolean"
    },
    "email": {
      "type": "string",
      "format": "email"
    },
    "phone": {
      "type": "string",
      "minLength": 11,
      "maxLength": 21
    },
    "bookingdates": {
      "type": "object",
      "required": ["checkin", "checkout"],
      "properties": {
        "checkin": {
          "type": "string",
          "format": "date"
        },
        "checkout": {
          "type": "string",
          "format": "date"
        }
      }
    }
  }
}
